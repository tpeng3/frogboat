/// <reference path="./src/@types/index.d.ts" />
{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "strict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    // "typeRoots": [
    //   "node_modules/@types/",
    //   "./src/@types/",
    //   ".src/**/@types/"
    // ],
    "baseUrl": ".",
    "paths": {
      // "src": [
      //   "src/*"
      // ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@util/*": [
        "src/util/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@images/*": [
        "src/images/*"
      ],
    }
  }
}